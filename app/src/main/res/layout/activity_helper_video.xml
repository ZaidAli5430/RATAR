<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video_chat_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelperVideoActivity">

    <RelativeLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/remoteBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/icon_padding">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_centerInParent="true"
                android:src="@drawable/profile"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/icon_padding"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/local_video_view_container"
        android:layout_width="112dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="28dp"
        android:background="#827b92">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local View"
            />


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onCallClicked"
            android:layout_centerInParent="true"
            android:src="@drawable/endcall_button_icon"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/btn_switch_camera"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_toRightOf="@id/btn_call"
            android:layout_toEndOf="@id/btn_call"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:onClick="onSwitchCameraClicked"
            android:src="@drawable/switch_button_icon"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/btn_helper_chat"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="33dp"
            android:layout_marginEnd="-147dp"
            android:layout_marginRight="25dp"
            android:onClick="onHelperChatClicked"

            android:layout_toStartOf="@id/btn_switch_camera"
            android:layout_toRightOf="@id/btn_call"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/helper_btn_mute"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_toLeftOf="@id/btn_call"
            android:layout_toStartOf="@id/btn_call"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:onClick="onLocalAudioMuteClicked"
            android:src="@drawable/unmute_button_icon"
            android:scaleType="centerCrop"
            tools:ignore="OnClick" />
    </RelativeLayout>

</RelativeLayout>