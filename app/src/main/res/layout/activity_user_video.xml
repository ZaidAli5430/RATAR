<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserVideoActivity1">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <RelativeLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="112dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="28dp"
        android:background="@color/light">


    </RelativeLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/channelCode"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:text=""
            android:textSize="11sp"
            app:icon="@drawable/copy_icon"
            app:iconGravity="start"
            app:iconSize="36dp"
            android:onClick="copyToClipBoard"/>

        <Button
            android:id="@+id/show_plane"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="4dp"
            android:background="@drawable/box"
            android:text="Show Plane"
            android:textSize="12sp" />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onCallClicked"
            android:layout_centerInParent="true"
            android:src="@drawable/endcall_button_icon"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/btn_mute"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_toLeftOf="@id/btn_call"
            android:layout_toStartOf="@id/btn_call"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:onClick="onUserAudioMuteClicked"

            android:src="@drawable/unmute_button_icon"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="0dp"

            android:layout_marginEnd="-147dp"
            android:layout_marginRight="25dp"
            android:layout_toStartOf="@id/btn_call"
            android:layout_toEndOf="@+id/btn_call"
            android:layout_toRightOf="@id/btn_call"
            android:onClick="onUserChatClicked"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_chat_24" />
    </RelativeLayout>

</RelativeLayout>